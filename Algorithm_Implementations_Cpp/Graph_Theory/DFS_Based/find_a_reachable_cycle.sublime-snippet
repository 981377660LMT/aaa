	<content><![CDATA[
template<class T>
optional<vector<int>> find_a_reachable_cycle(const graph<T> &g, const vector<int> &sources){
	int n = g.n;
	bool found = false;
	vector<int> cycle, was(n, -1), s;
	auto dfs = [&](auto self, int u, int pe)->void{
		for(auto id: g.adj[u]){
			if(id == pe || g.ignore && g.ignore(id)) continue;
			auto &e = g.edges[id];
			int v = u ^ e.from ^ e.to;
			if(!~was[v]){
				was[v] = was[u] + 1;
				s.push_back(id);
				self(self, v, id);
				s.pop_back();
				if(found) return;
			}
			else if(was[v] >= 0){
				found = true;
				cycle = {s.begin() + was[v], s.end()};
				cycle.push_back(id);
				return;
			}
		}
		was[u] = -2;
	};
	for(auto src: sources) if(!~was[src] && !found) was[src] = 0, dfs(dfs, src, -1);
	if(found) return cycle;
	else return {};
}
]]></content>
